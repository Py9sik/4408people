#include <iostream>
#include <iomanip>

using namespace std;

int main() {
    long long bytes;
    cout << "Byte= ";
    cin >> bytes;
    double kb = bytes / 1024.0;
    double mb = kb / 1024.0;
    double gb = mb / 1024.0;
    cout << fixed << setprecision(3);
    cout << bytes << "byte= " << kb << " Kb /" << mb << " Mb /" << gb << " Gb" << endl;
}
